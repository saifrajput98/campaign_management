<h1>Novices</h1>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th>Status</th>
      <th>Action</th>
    </tr> 
  </thead>

  <tbody>
    <% @novices.each do |novice| %>
    <tr>
      <td><%= novice.username %></td>
      <td><%= novice.status %></td>
      <td><%= link_to "Edit", edit_novice_path(novice) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
