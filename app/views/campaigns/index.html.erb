<% if expert_signed_in? %>
  <%= link_to "Logout", destroy_expert_session_path, method: :delete %>
<% else %>
  <%= link_to "Logout", destroy_novice_session_path, method: :delete %>
<% end %>
<h1>Campaigns</h1>
<% if expert_signed_in? %>
  <%= link_to "New Campaign", new_campaign_path, class: "btn btn-dark" %>
<% end %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Purpose</th>
      <th>Estimated Duration</th>
      <th>Actions</th>
    </tr> 
  </thead>
  <tbody>
    <% @campaigns.each do |campaign| %>
    <tr>
      <td><%= campaign.title %></td>
      <td><%= campaign.purpose %></td>
      <td><%= campaign.estimated_duration %></td>
      <td>
        <%= link_to "Edit", edit_campaign_path(campaign), class: "btn btn-dark btn-sm" %> |
        <%= link_to "Details", campaign_path(campaign), class: "btn btn-dark btn-sm" %> |
        <%= link_to 'Destroy',campaign_path(campaign), class: "btn btn-dark btn-sm",
                              method: :delete,
                              data: { confirm: 'Are you sure?'} %> |
        <%= link_to "Show Topics", campaign_discussion_topics_path(campaign), class: "btn btn-dark btn-sm" %>
        <% if novice_signed_in? %>
          | <%= link_to "Add Discussion Topics", new_campaign_discussion_topic_path(campaign), class: "btn btn-dark btn-sm" %>
         <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
